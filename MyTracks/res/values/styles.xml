<resources>

  <!--  About dialog TableRow -->
  <style name="AboutTableRow">
    <item name="android:paddingBottom">2dp</item>
  </style>
  
  <!--  About dialog TextView -->
  <style name="AboutTextView">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:textSize">20sp</item>  
  </style>

  <!--  About dialog TextView Column1 -->
  <style name="AboutTextView.Column1">
    <item name="android:gravity">right</item>
    <item name="android:layout_column">0</item>
    <item name="android:paddingLeft">10dp</item>
    <item name="android:paddingRight">10dp</item>
  </style>
    
  <!--  About dialog TextView Url -->
  <style name="AboutTextView.Url">
    <item name="android:autoLink">web</item>
    <item name="android:textSize">18sp</item>  
  </style>
  
  <!-- The style for the unit on the statistics activity. -->
  <style name="StatsUnit" parent="@android:Widget.TextView">
    <item name="android:gravity">bottom</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginBottom">-2dip</item>
    <item name="android:layout_marginTop">-2dip</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:textColor">@color/stat_label_text</item>
  </style>

  <!-- The style for the unit on the statistics activity where there is only one string. -->
  <style name="StatsUnitSolo" parent="@android:Widget.TextView">
    <item name="android:gravity">right</item>
    <item name="android:layout_marginBottom">-9dip</item>
    <item name="android:layout_marginTop">-9dip</item>
    <item name="android:textColor">@color/stat_label_text</item>
  </style>

  <!-- The style for a text view for displaying a value on the statistics activity. -->
  <style name="StatsRegister" parent="@android:Widget.TextView">
    <item name="android:gravity">right</item>
    <item name="android:layout_marginBottom">-9dip</item>
    <item name="android:layout_marginTop">-9dip</item>
    <item name="android:text">@string/value_unknown</item>
    <item name="android:textColor">@color/stat_label_text</item>
    <item name="android:textSize">40sp</item>
  </style>

  <!-- The style for a text view for displaying a large value on the statistics activity. -->
  <style name="StatsRegister.Big">
    <item name="android:layout_marginBottom">-13dip</item>
    <item name="android:layout_marginTop">-13dip</item>
    <item name="android:textSize">50sp</item>
  </style>

  <!-- The style for a text view for displaying a small value on the statistics activity. -->
  <style name="StatsRegister.Small">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginBottom">-5dip</item>
    <item name="android:layout_marginTop">-5dip</item>
    <item name="android:layout_width">fill_parent</item>
    <item name="android:textSize">25sp</item>
  </style>

  <!-- The style for a view which divides two columns in the statistics activity. -->
  <style name="StatsSpacer" parent="@android:Widget.TextView">
    <item name="android:background">@color/black</item>
    <item name="android:layout_marginBottom">-9dip</item>
    <item name="android:layout_marginTop">-9dip</item>
    <item name="android:layout_width">5dip</item>
    <item name="android:textSize">40sp</item>
  </style>

  <!-- The style for a view which divides the numerator and denominator of the units on the statistics activity. -->
  <style name="StatsDivider" parent="@android:Widget.TextView">
    <item name="android:background">@color/black</item>
    <item name="android:layout_height">3dip</item>
    <item name="android:layout_width">fill_parent</item>
  </style>
  
  <!-- The style for the track widget. -->
  <style name="WidgetText" parent="@android:Widget.TextView">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:textColor">@color/appwidget_text</item>
    <item name="android:textSize">14sp</item>
  </style>
  <style name="WidgetText.Register">
    <item name="android:width">160px</item>
  </style>
  
  <!-- The style for the layout of the bottom buttons. -->
  <style name="ButtonLayout">
    <item name="android:background">@drawable/list_bar</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">fill_parent</item>
    <item name="android:orientation">horizontal</item>
    <item name="android:paddingLeft">2dip</item>
    <item name="android:paddingRight">2dip</item>
    <item name="android:paddingTop">4dip</item>
  </style>
    
  <!-- The style for the bottom button. -->
  <style name="Button">
    <item name="android:layout_height">48dip</item>
    <item name="android:layout_weight">1</item>
    <item name="android:layout_width">0dip</item>
    <item name="android:maxLines">2</item>
    <item name="android:textSize">14dip</item>
  </style>
  
  <!--  The style for the spacer on the left and right of the bottom buttons. -->
  <style name="ButtonSpacer">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_weight">0.25</item>
    <item name="android:layout_width">0dip</item>
    <item name="android:orientation">horizontal</item>
    <item name="android:visibility">gone</item>
  </style>
  
  <style name="WelcomeText">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">fill_parent</item>
    <item name="android:paddingLeft">10sp</item>
    <item name="android:paddingRight">10sp</item>
    <item name="android:textColor">@color/black</item>
    <item name="android:textSize">16sp</item>
  </style>  
  
  <style name="WelcomeText.Question">
    <item name="android:paddingTop">10sp</item>
    <item name="android:textStyle">bold</item>
  </style>    
</resources>