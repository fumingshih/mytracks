<resources>
  <style name="ThemeSelector" parent="android:Theme" />

  <!-- Bottom Bar -->
  <style name="BottomBar" parent="@android:style/DeviceDefault.ButtonBar">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">fill_parent</item>
    <item name="android:orientation">horizontal</item>
  </style>

  <!-- Bottom Button -->
  <style name="BottomButton" parent="@android:style/Widget.DeviceDefault.Button.Borderless">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_weight">1</item>
    <item name="android:layout_width">0dp</item>
  </style>

  <style name="SensorStateLabel">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">fill_parent</item>
    <item name="android:paddingLeft">4dp</item>
    <item name="android:paddingRight">4dp</item>
  </style>

  <style name="SensorStateValue">
    <item name="android:background">@color/stat_label_background</item>
    <item name="android:gravity">right</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">fill_parent</item>
    <item name="android:paddingLeft">4dp</item>
    <item name="android:paddingRight">4dp</item>
    <item name="android:textColor">@color/stat_label_text</item>
    <item name="android:textSize">40sp</item>
  </style>

  <!-- The style for a view which divides the numerator and denominator of the units on the statistics activity. -->
  <style name="StatsDivider" parent="@android:Widget.TextView">
    <item name="android:background">@color/black</item>
    <item name="android:layout_height">3dp</item>
    <item name="android:layout_width">fill_parent</item>
  </style>

  <!-- The style for a text view for displaying a value on the statistics activity. -->
  <style name="StatsRegister" parent="@android:Widget.TextView">
    <item name="android:gravity">right</item>
    <item name="android:layout_marginBottom">-9dp</item>
    <item name="android:layout_marginTop">-9dp</item>
    <item name="android:text">@string/value_unknown</item>
    <item name="android:textColor">@color/stat_label_text</item>
    <item name="android:textSize">40sp</item>
  </style>

  <!-- The style for a text view for displaying a large value on the statistics activity. -->
  <style name="StatsRegister.Big">
    <item name="android:layout_marginBottom">-13dp</item>
    <item name="android:layout_marginTop">-13dp</item>
    <item name="android:textSize">50sp</item>
  </style>

  <!-- The style for a text view for displaying a small value on the statistics activity. -->
  <style name="StatsRegister.Small">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginBottom">-5dp</item>
    <item name="android:layout_marginTop">-5dp</item>
    <item name="android:layout_width">fill_parent</item>
    <item name="android:textSize">25sp</item>
  </style>

  <!-- The style for a view which divides two columns in the statistics activity. -->
  <style name="StatsSpacer" parent="@android:Widget.TextView">
    <item name="android:background">@color/black</item>
    <item name="android:layout_marginBottom">-9dp</item>
    <item name="android:layout_marginTop">-9dp</item>
    <item name="android:layout_width">5dp</item>
    <item name="android:textSize">40sp</item>
  </style>

  <!-- The style for the unit on the statistics activity. -->
  <style name="StatsUnit" parent="@android:Widget.TextView">
    <item name="android:gravity">bottom</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginBottom">-2dp</item>
    <item name="android:layout_marginTop">-2dp</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:textColor">@color/stat_label_text</item>
  </style>

  <!-- The style for the unit on the statistics activity where there is only one string. -->
  <style name="StatsUnitSolo" parent="@android:Widget.TextView">
    <item name="android:gravity">right</item>
    <item name="android:layout_marginBottom">-9dp</item>
    <item name="android:layout_marginTop">-9dp</item>
    <item name="android:textColor">@color/stat_label_text</item>
  </style>

  <!-- The TextView showing the stats in the track list item -->
  <style name="TrackListItemStatsTextView" parent="@android:style/TextAppearance.DeviceDefault.Small">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:singleLine">true</item>
    <item name="android:textColor">@color/green</item>
  </style>
  
  <!-- The welcome activity answer TextView -->
  <style name="WelcomeAnswerTextView" parent="@android:style/TextAppearance.DeviceDefault.Small">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:paddingBottom">8dp</item>
  </style>
  
  <!-- The welcome activity question TextView -->
  <style name="WelcomeQuestionTextView" parent="@android:style/TextAppearance.DeviceDefault.Medium">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:textStyle">bold</item>
    <item name="android:paddingTop">8dp</item>
  </style>

  <!-- Widget TextView -->
  <style name="WidgetTextView">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:textColor">@color/appwidget_text</item>
    <item name="android:textSize">14sp</item>
  </style>

  <!-- Widget TextView value  -->
  <style name="WidgetTextView.Value">
    <item name="android:width">160px</item>
  </style>
</resources>
