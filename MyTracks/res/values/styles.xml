<resources>
  <!-- The style for the bottom button -->
  <style name="BottomButton" parent="@android:style/Widget.DeviceDefault.Button.Borderless">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_weight">1</item>
    <item name="android:layout_width">0dp</item>
  </style>
  <!-- The style for the bottom button bar -->
  <style name="BottomButtonBar" parent="@android:style/DeviceDefault.ButtonBar">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">fill_parent</item>
    <item name="android:orientation">horizontal</item>
  </style>
  <!-- The style for the edit category -->
  <style name="EditCategory" parent="@android:style/TextAppearance.DeviceDefault.Medium">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">fill_parent</item>
    <item name="android:selectAllOnFocus">true</item>
    <item name="android:singleLine">true</item>
  </style>
  <!-- The style for the edit description -->
  <style name="EditDescription" parent="@android:style/TextAppearance.DeviceDefault.Medium">
    <item name="android:inputType">textAutoCorrect|textCapSentences</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">fill_parent</item>
    <item name="android:maxLines">50</item>
    <item name="android:selectAllOnFocus">true</item>
    <item name="android:singleLine">false</item>
  </style>
  <!-- The style for the edit label -->
  <style name="EditLabel" parent="@android:style/TextAppearance.DeviceDefault.Medium">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">wrap_content</item>
  </style>
  <!-- The style for the edit name -->
  <style name="EditName" parent="@android:style/TextAppearance.DeviceDefault.Medium">
    <item name="android:drawablePadding">8dp</item>
    <item name="android:gravity">center_vertical</item>
    <item name="android:inputType">textAutoCorrect|textCapWords</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">fill_parent</item>
    <item name="android:selectAllOnFocus">true</item>
    <item name="android:singleLine">true</item>
  </style>
  <!-- The style for the list empty text view -->
  <style name="ListEmptyTextView" parent="@android:style/TextAppearance.DeviceDefault.Large">
    <item name="android:gravity">center</item>
    <item name="android:layout_gravity">center</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:padding">8dp</item>
  </style>
  <!-- The style for the list item category -->
  <style name="ListItemCategory" parent="@android:style/TextAppearance.DeviceDefault.Small">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginLeft">8dp</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:singleLine">true</item>
  </style>
  <!-- The style for the list item description -->
  <style name="ListItemDescription" parent="@android:style/TextAppearance.DeviceDefault.Small">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">fill_parent</item>
    <item name="android:singleLine">false</item>
    <item name="android:textColor">@android:color/secondary_text_dark</item>
  </style>
  <!-- The style for the list item name -->
  <style name="ListItemName" parent="@android:style/TextAppearance.DeviceDefault.Large">
    <item name="android:gravity">center_vertical</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:drawablePadding">8dp</item>
    <item name="android:singleLine">true</item>
  </style>
  <!-- style for the list item stats -->
  <style name="ListItemStats" parent="@android:style/TextAppearance.DeviceDefault.Small">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:singleLine">true</item>
    <item name="android:textColor">@android:color/secondary_text_dark</item>
  </style>
  <!-- The style for the marker detail label -->
  <style name="MarkerDetailLabel" parent="@android:style/TextAppearance.DeviceDefault.Large">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">wrap_content</item>
  </style>
  <!-- The style for the sensor state label -->
  <style name="SensorStateLabel" parent="@android:style/TextAppearance.DeviceDefault.Medium">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">wrap_content</item>
  </style>
  <!-- The style for the sensor state value -->
  <style name="SensorStateValue" parent="@android:style/TextAppearance.DeviceDefault.Large">
    <item name="android:background">@android:color/background_light</item>
    <item name="android:gravity">right</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">fill_parent</item>
    <item name="android:textColor">@android:color/primary_text_light</item>
  </style>
  <!-- The style for the scroll view -->
  <style name="ScrollView">
    <item name="android:layout_height">fill_parent</item>
    <item name="android:layout_width">fill_parent</item>
    <item name="android:scrollbarStyle">outsideInset</item>
  </style>
  <!-- The style for the stats label -->
  <style name="StatsLabel" parent="@android:style/TextAppearance.DeviceDefault.Medium">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_weight">1</item>
    <item name="android:layout_width">0dp</item>
  </style>
  <!-- The style for the stats spacer -->
  <style name="StatsSpacer">
    <item name="android:layout_height">fill_parent</item>
    <item name="android:layout_width">8dp</item>
  </style>
  <!-- The style for the stats value -->
  <style name="StatsValue" parent="@android:style/TextAppearance.DeviceDefault.Large">
    <item name="android:background">@android:color/background_light</item>
    <item name="android:gravity">right</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_weight">1</item>
    <item name="android:layout_width">0dp</item>
    <item name="android:textColor">@android:color/primary_text_light</item>
  </style>
  <style name="ThemeSelector" parent="android:Theme" />
  <!-- The style for the welcome page answer -->
  <style name="WelcomeAnswerTextView" parent="@android:style/TextAppearance.DeviceDefault.Small">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:paddingBottom">8dp</item>
  </style>
  <!-- The style for welcome page question -->
  <style name="WelcomeQuestionTextView" parent="@android:style/TextAppearance.DeviceDefault.Medium">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:paddingTop">8dp</item>
    <item name="android:textStyle">bold</item>
  </style>
  <!-- The style for the widget label -->
  <style name="WidgetTextView">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:textColor">@color/appwidget_text</item>
    <item name="android:textSize">14sp</item>
  </style>
  <!-- The style for the widget value -->
  <style name="WidgetTextView.Value">
    <item name="android:width">160px</item>
  </style>
</resources>