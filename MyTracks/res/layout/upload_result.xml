<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_height="wrap_content"
  android:layout_width="fill_parent"
  android:orientation="vertical">
  <ScrollView
    android:layout_height="0dp"
    android:layout_margin="5dp"
    android:layout_weight="1"
    android:layout_width="fill_parent">
    <LinearLayout
      android:layout_height="wrap_content"
      android:layout_width="fill_parent"
      android:orientation="vertical">

      <!-- Header -->
      <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/send_google_result_header"
        style="?android:attr/textAppearanceLarge"/>

      <!-- Google Maps result -->
      <LinearLayout
        android:id="@+id/upload_result_maps_result"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:orientation="horizontal">
        <ImageView
          android:id="@+id/upload_result_maps_result_icon"
          android:layout_gravity="center_vertical"
          android:layout_height="wrap_content"
          android:layout_width="wrap_content"
          android:src="@drawable/success"/>
        <LinearLayout
          android:layout_height="wrap_content"
          android:layout_width="fill_parent"
          android:orientation="vertical">
          <TextView
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:text="@string/send_google_maps"
            style="?android:attr/textAppearanceMedium"/>
          <TextView
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:text="@string/send_google_maps_url"
            style="?android:attr/textAppearanceSmall"/>
        </LinearLayout>
      </LinearLayout>

      <!-- Google Fusion Tables result -->
      <LinearLayout
        android:id="@+id/upload_result_fusion_tables_result"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:orientation="horizontal">
        <ImageView
          android:id="@+id/upload_result_fusion_tables_result_icon"
          android:layout_gravity="center_vertical"
          android:layout_height="wrap_content"
          android:layout_width="wrap_content"
          android:src="@drawable/success"/>
        <LinearLayout
          android:layout_height="wrap_content"
          android:layout_width="fill_parent"
          android:orientation="vertical">
          <TextView
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:text="@string/send_google_fusion_tables"
            style="?android:attr/textAppearanceMedium"/>
          <TextView
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:text="@string/send_google_fusion_tables_url"
            style="?android:attr/textAppearanceSmall"/>
        </LinearLayout>
      </LinearLayout>

      <!-- Google Docs result -->
      <LinearLayout
        android:id="@+id/upload_result_docs_result"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:orientation="horizontal">
        <ImageView
          android:id="@+id/upload_result_docs_result_icon"
          android:layout_gravity="center_vertical"
          android:layout_height="wrap_content"
          android:layout_width="wrap_content"
          android:src="@drawable/success"/>
        <LinearLayout
          android:layout_height="wrap_content"
          android:layout_width="fill_parent"
          android:orientation="vertical">
          <TextView
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:text="@string/send_google_docs"
            style="?android:attr/textAppearanceMedium"/>
          <TextView
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:text="@string/send_google_docs_url"
            style="?android:attr/textAppearanceSmall"/>
        </LinearLayout>
      </LinearLayout>

      <!-- Footer -->
      <TextView
        android:id="@+id/upload_result_success_footer"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:text="@string/send_google_success_footer"
        style="?android:attr/textAppearanceSmall"/>
      <TextView
        android:id="@+id/upload_result_error_footer"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:text="@string/send_google_error"
        style="?android:attr/textAppearanceLarge"/>
    </LinearLayout>
  </ScrollView>
</LinearLayout>
