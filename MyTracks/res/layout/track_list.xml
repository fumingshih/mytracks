<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_height="fill_parent"
  android:layout_width="fill_parent"
  android:orientation="vertical" >
  <ListView
    android:id="@+id/track_list"
    android:layout_height="0dp"
    android:layout_weight="1.0"
    android:layout_width="fill_parent" />
  <TextView
    android:id="@+id/track_list_empty_view"
    android:layout_height="0dp"
    android:layout_weight="1.0"
    android:layout_width="fill_parent"
    android:text="@string/track_list_empty_message"
    android:visibility="gone"
    style="@style/ListEmptyTextView" >
  </TextView>
  <LinearLayout
    android:layout_gravity="center"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:orientation="horizontal" >
    <ImageButton
      android:background="@android:color/transparent"
      android:id="@+id/track_list_record_track_button"
      android:layout_height="100dp"
      android:layout_width="wrap_content"
      android:scaleType="centerInside" />
    <LinearLayout
      android:layout_height="100dp"
      android:layout_marginLeft="-32dp"
      android:layout_width="wrap_content"
      android:orientation="vertical" >
      <TextView
        android:id="@+id/track_list_record_state"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:paddingTop="8dp"
        android:textColor="@color/red"
        style="@style/TextMedium" />
      <TextView
        android:id="@+id/track_list_record_time"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:paddingLeft="24dp"
        android:paddingRight="8dp"
        android:textColor="@android:color/white"
        style="@style/TextLarge" />
    </LinearLayout>
    <ImageButton
      android:background="@android:color/transparent"
      android:contentDescription="@string/menu_stop_recording"
      android:id="@+id/track_list_stop_recording_button"
      android:layout_height="100dp"
      android:layout_width="wrap_content"
      android:scaleType="centerInside" />
  </LinearLayout>
</LinearLayout>